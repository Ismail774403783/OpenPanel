<div class="instance_container">

    <div class="box">
        <% for(var i=0; i < server.length; i++) { %>
        	<a href ="<%= '/server/' + server[i].id %>">
   			<div class="instance">
   				<div class=instance_left>
   					<img src="<%= '../images/game_icons/' + server[i].game + '.png' %>" alt="<%= i %>" height=100% width=100% align=left float=left style="margin-right: 15%">

   				</div>
				<div class=instance_right id= "<%=server[i].id %>" style="background: #0C0 ; color: #000">
				<script>
					if("<%=server[i].status %>" == "ONLINE"){
						document.getElementById("<%=server[i].id %>").style.background = "#0C0";
					}else if("<%=server[i].status %>" == "STARTING"){
						document.getElementById("<%=server[i].id %>").style.background = "#CC0";
					}else if("<%=server[i].status %>" == "OFFLINE"){
						document.getElementById("<%=server[i].id %>").style.background = "#C00";
						document.getElementById("<%=server[i].id %>").style.color = "#EEE";
					}else{
						document.getElementById("<%=server[i].id %>").style.background = "#000";
						document.getElementById("<%=server[i].id %>").style.color = "#FFF";
					}
				</script>
        			<p>
        				Status: <%= server[i].status %>
        			</p>
        			<p>
        				Name: <%= server[i].name %>
        			</p>
        			<p>
        				Host:  <%= server[i].hostname %>
        			</p>
        			<p>
        				IP: <%= server[i].ip %>
        			</p>
        			<p>
        				CPU: 0%
        				RAM: <%= server[i].ram %>
        				Slots: <%= server[i].slots %>
        			</p>
    				<p>
    				Storage: <%= server[i].storage %>
        			Backup: <%= server[i].backup %>
        			</p>
        		</div>
	        </div>
	    </a>
		<% } %>
    </div>
</div>